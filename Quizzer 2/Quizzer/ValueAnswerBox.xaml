<UserControl x:Class="Quizzer.NumericAnswerBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" > 
        <DockPanel>
    <TextBlock x:Name="txbSignificantFigures" Text="" FontSize="14"  DockPanel.Dock="Top"  Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
            <TextBox DockPanel.Dock="Bottom" x:Name="txtActualAnswer" Foreground="{ DynamicResource  ActualAnswerBrush}" TextWrapping="Wrap" IsReadOnly="True" Visibility="Collapsed" Width="Auto" Height="Auto" FontSize="14"    ></TextBox>
            <TextBlock x:Name="lblActualAnswer" Visibility="Collapsed" Text="Standard correct answer:" FontWeight="Bold" FontSize="14" Foreground="White" DockPanel.Dock="Bottom"  Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
            <TextBox x:Name="txtAnswer" Width="Auto" Height="Auto" FontSize="14"  DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBox>
        </DockPanel> 
</UserControl>
