<Window x:Class="Quizzer.wndIsCorrect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Were you correct?" Topmost="True"  WindowStartupLocation="CenterScreen" Height="91.825" Width="300" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCorrect" Content="Correct" Margin="10,10,9.5,10.5" IsDefault="True" Click="btnCorrect_Click" BorderBrush="#FF49BC38"/>
        <Button x:Name="btnIncorrect" Content="Incorrect" Margin="4.5,10,10,10.5" IsCancel="True"   Grid.Column="1" Click="btnIncorrect_Click" BorderBrush="#FF9A0B0B"/>

    </Grid>
</Window>
